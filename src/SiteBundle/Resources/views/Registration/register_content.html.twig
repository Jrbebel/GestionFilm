<form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">


    <div class="form-group">

        <label for="form_username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">

            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {% if   form_errors(form.username) |length > 0 %}
                <div class="alert alert-danger" role="alert">{{ form_errors(form.username) }}</div> 

            {%endif%}        
        </div>
    </div>
    <div class="form-group">
        <label for="form_email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }} 
            {% if   form_errors(form.email) |length > 0 %}

                <div class="alert alert-danger" role="alert">
                    <p>  {{ form_errors(form.email) }}</p>
                </div> 

            {%endif%} 
        </div>

    </div>

    <div class="form-group">
        <label for="form_plainPassword_first" class="col-sm-2 control-label">Mot de passe</label>
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }} 
            {% if   form_errors(form.plainPassword.first) |length > 0 %}
                <div class="alert alert-danger" role="alert">{{ form_errors(form.plainPassword.first) }}</div> 

            {%endif%} 
        </div>

    </div>

    <div class="form-group">
        <label for="form_plainPassword_second" class="col-sm-2 control-label">VÃ©rification</label>
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }} 
            {% if   form_errors(form.plainPassword.second) |length > 0 %}
                <div class="alert alert-danger" role="alert">{{ form_errors(form.plainPassword.second) }}</div> 

            {%endif%} 
        </div>


    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />

        </div>
    </div>



    {{ form_rest(form) }}


    <div>

    </div>
</form>
