    <a name="fb_share" type="box_count" share_url="http://37.187.123.100/dev/gestionmultimedia/web/app.php"></a>
    <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript"></script>



{% endblock %}