<div class="panel panel-primary">
    
    <div class="panel-heading">Amis en attente de confirmation</div>
    <div class="panel-body">

        <div class="media-body">

            {% for items in Amisconf %}
                <div class="col-sm-3 col-md-4">
                    <div class="thumbnail">
                        <img height="130px" width="130px" src="{{asset('uploads/profile/'~items.user.path)}}" alt="image profile">
                        <div class="caption">
                            <h3>{{items.user.username}}</h3>
                            <p><a href="{{path('ajoutconfirm_friend',{'id': items.user.id})}}" class="btn btn-primary" role="button">Confirmer</a> <a href="{{path('delete_friend',{'id':items.friends.id})}}" class="btn btn-default" role="button">Supprimer</a></p>
                        </div>
                    </div>
                </div>
            {% endfor%}
            <div  class='row'></div>
            {% if Amisconf is empty %}
                <div class="alert alert-danger" role="alert">Vous n'avez aucune demande d'amis. </div>      
            {% else %}


                <div class="row">


                </div>      

            {% endif%}

        </div>

    </div>
</div>