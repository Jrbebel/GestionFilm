

<div class="panel panel-primary">
    <div class="panel-heading">Profile</div>
    <div class="panel-body">

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}    
        <ul class="media-list">
            <li class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object img-thumbnail" src="{{asset('uploads/profile/'~ user.path)}}" height="150px" width="150px" alt="...">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">{{ user.nom |upper }} {{ user.prenom }}</h4>
                    <p><strong>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</strong> : {{ user.username }}</p>
                    <p><strong>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</strong> : {{ user.email }}</p>
                </div>
            </li>
        </ul>


                <a href="{{path('fos_user_profile_edit')}}" role='button' class='btn btn-primary modifier'>Modifier</a>

    </div>
</div>